<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <title><%= current_page.data.title %></title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/dots.png" />
    <link href='http://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Condensed:400,700' 
      rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "normalize", "all" %>
    
  </head>
  <body>
  <div id="wrapper">

  <header>
    <div class="container clearfix">
      <h1 id="logo">
        <a href="/"><img src="/images/gliderlabs.png" /></a>
      </h1>
      <nav>
        <a href="/">Home</a>
        <a href="/#about">About</a>
        <a style="font-weight: bold;" href="mailto:team+hire@gliderlabs.com">Hire Us</a>
      </nav>
    </div>
  </header>

  <main id="main" role="main">
    <%= yield %>
  </main>

  <footer>
    <div class="container clearfix">
      <p>
        <a href="http://twitter.com/gliderlabs"><i class="fa fa-twitter fa-3x"></i></a>
        <a href="http://github.com/gliderlabs"><i class="fa fa-github fa-3x"></i></a>
      </p>
      &copy; <%= Date.today.year %> Glider Labs, LLC
    </div>
  </footer>

  </div>
  <%= javascript_include_tag  "all" %>
